addCommandToBookmarks() # Add new item to bookmark
{
    command=$@
    # description=$(grep "^function $command(" "$HOME/.functions" | sed 's/.*() # //g')

    echo "$command" >> "$HOME"/.bookmark;
    echo "Bookmarking '""$command""'";

