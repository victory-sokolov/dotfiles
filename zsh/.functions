fuzzyFavoriteCommand() # List favorited commands
{
    bookmarkedCommands=$((cat "$HOME"/.bookmark) | sed '/^s*$/d' | uniq | fzf); 
    echo "$bookmarkedCommands";
    eval "$bookmarkedCommands";
